# Server Monitoring Environment Configuration
# Copy this file to .env and customize the values

# Security - IMPORTANT: Change this in production!
SECRET_KEY=your-secure-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/monitoring
POSTGRES_PASSWORD=postgres

# Flask Environment (development/production)
FLASK_ENV=production

# Logging
LOG_LEVEL=INFO

# Pagination
ITEMS_PER_PAGE=20

# SNMP Polling Interval (minutes)
SNMP_POLL_INTERVAL=5

# Enable/Disable Scheduler
ENABLE_SCHEDULER=true

# CORS Origins (comma-separated, use * for all)
CORS_ORIGINS=*

# Session Security (set to true in production with HTTPS)
SESSION_COOKIE_SECURE=false
